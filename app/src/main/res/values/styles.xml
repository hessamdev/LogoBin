<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="TextView_normal">
        <item name="fontPath">fonts/iransansweb.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/c500</item>
    </style>

    <style name="TextView_smal">
        <item name="fontPath">fonts/iransansweb.ttf</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/c500</item>
    </style>

    <style name="TextView_ultralight">
        <item name="fontPath">fonts/iranfont_ultralight.ttf</item>
        <item name="android:textSize">15sp</item>
    </style>




</resources>
