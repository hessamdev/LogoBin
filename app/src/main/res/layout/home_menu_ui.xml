<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:alpha="0.5"
    android:background="#FFFF">

    <RelativeLayout
        android:id="@+id/menu_Relativ_register_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/porofile"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_profile"
            android:layout_marginEnd="15dp"
            android:text="حساب کاربری"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_bookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bookmark_full"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_bookmark"
            android:layout_marginEnd="15dp"
            android:text="نشان شده ها"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_ghavanin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_ghavanin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ghavanin"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_ghavanin"
            android:layout_marginEnd="15dp"
            android:text="قوانین و مقررات"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_enteghad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_pishnahadat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pishnahad"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_pishnahadat"
            android:layout_marginEnd="15dp"
            android:text="پیشنهاد و انتقاد"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_poshtibani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_poshtibani"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/poshtibani"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_poshtibani"
            android:layout_marginEnd="15dp"
            android:text="پشتیبانی"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_pishnahaddostan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_share"
            android:layout_marginEnd="15dp"
            android:text="پیشنهاد به دوستان"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_noskhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_version"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/version"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_version"
            android:layout_marginEnd="15dp"
            android:text="نسخه برنامه: 1.0"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_Relativ_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/menu_imageview_logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/log_out"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/menu_imageview_logout"
            android:layout_marginEnd="15dp"
            android:text="خروج"
            />
    </RelativeLayout>

</LinearLayout>
</ScrollView>