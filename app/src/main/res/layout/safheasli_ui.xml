<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:id="@+id/Safheasli_CardView_Viewpager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="7dp"
        app:cardCornerRadius="20dp"
        >
    <android.support.v4.view.ViewPager
        android:id="@+id/Safheasli_Viewpager_SliderTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow2"
            />
        <RelativeLayout
            android:id="@+id/Safheasli_Relative_Brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/Safheasli_Textview_Brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="برندها"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="ادامه..."/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Safheasli_Recyclerview_Brand"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow2"
            />
        <RelativeLayout
            android:id="@+id/Safheasli_Relative_Sherkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/Safheasli_Textview_Sherkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="شرکت ها"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="ادامه..."/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Safheasli_Recyclerview_Sherkat"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow2"
            />
        <RelativeLayout
            android:id="@+id/Safheasli_Relative_Kala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/Safheasli_Textview_Kala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="کالا ها"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="ادامه..."/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Safheasli_Recyclerview_Kala"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    </LinearLayout>

</ScrollView>