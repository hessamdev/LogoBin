<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


            <LinearLayout
                android:id="@+id/z_m_gozaresh_Linear_Rate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <RelativeLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:padding="3dp">

                    <FrameLayout
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:background="@drawable/dayere"
                        android:foregroundGravity="center">

                        <TextView
                            android:id="@+id/z_n_Textview_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/c400"
                            android:textSize="12sp" />

                    </FrameLayout>

                </RelativeLayout>

                <TextView
                    style="@style/TextView_smal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="امتیازدهی" />


            </LinearLayout>




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/z_model_gozaresh_Relative_Gozaresh"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:alpha="0.4"
                android:src="@drawable/takhalof"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:textColor="@color/c500"
                android:text="گزارش"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            >

            <TextView
                android:id="@+id/z_m_gozaresh_textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/relative_image_darkhst"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/c500"
                android:textSize="12sp"
                />
            <TextView

                android:id="@+id/z_model_gozaresh_textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/c500"
                android:text="02:10"
                android:textSize="12sp"

                />

            <TextView
                android:visibility="gone"
                android:id="@+id/z_model_gozaresh_textview_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c500"
                android:textSize="11sp"
                android:text="97/01/10" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relative_image_darkhst"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:layout_alignParentEnd="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:src="@drawable/sayehpng" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/z_model_gozaresh_circularimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp" />
        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>