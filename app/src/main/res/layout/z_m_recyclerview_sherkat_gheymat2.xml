<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/z_m_RecyclerBrand_Constrain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >



        <RelativeLayout
            android:id="@+id/toprelative"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/z_model_recyclerSherkat_ImageView_Sherkat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/z_model_recyclerSherkat_Imageview_Saye"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sayehpng" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/toprelative"
            android:orientation="vertical">

            <TextView
                android:id="@+id/z_model_recyclerSherkat_Textview_Gheymat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/c400"
                android:text=" 11000 تومان"
                android:textSize="13sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/z_model_recyclerSherkat_Textview_Lastseen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/c400"
                android:text="آنلاین"
                android:textSize="11sp"
                android:textStyle="bold"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/z_model_recyclerSherkat_Textview_Rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c400"
                        android:text="4.5"
                        android:gravity="center"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/z_model_recyclerBrand_Imageview_Rate"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:alpha="0.4"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:background="@drawable/ic_star" />
                </LinearLayout>
                <TextView
            android:id="@+id/z_model_recyclerSherkat_Textview_Meghdar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c400"
            android:gravity="center"
            android:textSize="11sp"
            android:padding="2dp"
            android:text="حداقل 12 عدد"/>
            <TextView
                android:id="@+id/z_model_recyclerSherkat_Textview_Offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c400"
                android:gravity="center"
                android:textSize="11sp"
                android:padding="2dp"
                android:text="امکان تخفیف"/>

            <TextView
                android:id="@+id/z_model_recyclerSherkat_Textview_Tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/c400"
                android:gravity="center"
                android:textSize="11sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/stork_gray"
                android:text="tab"/>
            </LinearLayout>






</LinearLayout>