<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/z_m_RecyclerBrand_Constrain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/toprelative"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/z_model_recyclerSherkat_ImageView_Sherkat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/z_model_recyclerSherkat_Imageview_Saye"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sayehpng" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/toprelative"
            android:orientation="vertical">

            <TextView
                android:id="@+id/z_model_recyclerSherkat_Textview_Gheymat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="#16c100"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/z_model_recyclerSherkat_Textview_Rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c500"
                        android:gravity="center"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/z_model_recyclerBrand_Imageview_Rate"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:alpha="0.4"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:background="@drawable/ic_star" />
                </LinearLayout>
                <TextView
                    android:id="@+id/z_model_recyclerSherkat_Textview_TimeUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c400"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:padding="2dp"
                    android:text="لحظاتی پیش"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>




</android.support.constraint.ConstraintLayout>