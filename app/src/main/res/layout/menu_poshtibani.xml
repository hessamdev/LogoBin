<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/Poshtibani_Imageview_Back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_arrow"
                android:padding="17dp"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/Poshtibani_Textview_NameKala"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:lines="1"
                android:paddingStart="7dp"
                android:paddingEnd="57dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/c400"
                android:layoutDirection="ltr"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_png"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="به مرکز پشتیبانی خوش آمدید"
            android:textSize="12sp"

            />

        <EditText
            android:id="@+id/postibani_EditText_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stork_gray"
            android:inputType="textEmailAddress"
            android:padding="7dp"
            android:hint="ایمیل"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:textSize="14sp"

            />
        <EditText
            android:id="@+id/postibani_EditText_Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stork_gray"
            android:inputType="text"
            android:padding="7dp"
            android:textSize="14sp"
            android:hint="عنوان سوال"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"

            />

        <EditText
            android:id="@+id/postibani_EditText_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stork_gray"

            android:padding="7dp"
            android:textSize="13sp"
            android:hint="توضیح"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:lines="5"
            android:gravity="top"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تیم،پشتیبانی همیشه و در هر زمان پاسخ گوی شماست"
            android:gravity="center"
            android:textSize="9sp"

            />

        <TextView
            android:id="@+id/postibani_textview_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="ارسال"
            android:background="@drawable/back_reg_gray"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />


    </LinearLayout>

</ScrollView>