<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"

    android:layout_gravity="center"
    android:background="@drawable/back_alert_dayereh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.4"
            android:src="@drawable/alert_new2"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="آیا مایل به حذف حساب کاربری خود هستید؟"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            >

            <TextView
                android:id="@+id/AlertDeleteAcc_Textview_No"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="خیر"
                android:textSize="17sp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/back_reg_gray"
                />

            <TextView
                android:id="@+id/AlertDeleteAcc_Textview_Yes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="بله"
                android:textSize="17sp"
                android:textColor="#ff0000"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/back_reg_gray"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>